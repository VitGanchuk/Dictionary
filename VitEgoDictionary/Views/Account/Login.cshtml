@model VitEgoDictionary.Models.ViewModels.UrlReferrerViewModel

@{
    ViewBag.Title = "VitEgo | Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="body">
    <div id="body-title"><h1>Authorization</h1></div>
    <hr />
    <div id="body-body">                    
        <div class="panel panel-default">
            <div class="panel-body">
                <div>
                    <h2 id="panel-body-header">
                        <span>Please log in to continue</span>
                    </h2>
                </div>
                <hr />
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login-form" }))
                {
                    <div class="form-group">
                        <label>User Name</label>
                        @Html.TextBox("user-name", null, new { @class = "form-control required", autocomplete = "off", tabindex = "1" })                                        
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        @Html.Password("password", null, new { @class = "form-control required", autocomplete = "off", tabindex = "2" })                                        
                    </div>
                    <div class="form-group">
                        <input type="checkbox" id="remember-me" class="checkbox" data-label="Remember me" />
                    </div>
                    <div class="form-group">
                        <h4>
                            <span>Or <a href="@Url.Action("Register","Account")">register</a> if you do not have an account yet</span>
                        </h4>
                    </div>
                    <div>
                        <hr />     
                        <div class="text-right">
                            <a id="url-referrer" href="@Model.UrlReferrer" class="button button-default">Cancel</a>
                            <input type="button" class="button button-primary" id="submit" value="Login" tabindex="3"/>
                        </div>
                    </div>
                }
            </div>    
        </div>
    </div>	
</div>

<script type="text/javascript" src="@Url.Content("~/Scripts/dictionary-validate.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/dictionary-account-login.js")"></script>
